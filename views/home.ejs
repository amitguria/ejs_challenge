    <% posts.forEach(function(element){ %> <!-- forEach method is an alternative of for loop -->
        <h1><%= element.title %></h1>
       <p>
        <%= (element.content).substring(0,100)+"..." %> <!--substring is a truncate string javascript method where zero is starting point and 100 is length. -->
